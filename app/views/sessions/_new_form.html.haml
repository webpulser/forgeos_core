- form_tag session_path, { :autocomplete => 'off', :class => "login_form" } do
  %label{ :for => "email" }
    = I18n.t('email').capitalize
  = text_field_tag 'email'
  %label{ :for => "password" }
    = I18n.t('password').capitalize
  = password_field_tag 'password'
  = check_box_tag 'remember_me'
  %label{ :for => "remember_me", :class => "remember" }
    = I18n.t('remember_me').capitalize
  = submit_tag I18n.t('log.in.action').capitalize, :class => 'submit_contact'
  .clear