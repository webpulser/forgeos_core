<%
  output = {
    :sEcho => params[:sEcho],
    :iTotalRecords => @categories.total_entries || 0,
    :iTotalDisplayRecords => @categories.size,
    :aaData => @categories.collect do |category|
      [
        content_tag(:div, tag(:div, :class=>'handler') + tag(:div, :class=>'small-icons category'), :id => polymorphic_html_id(category), :class => 'handler_container'),
        content_tag(:div, category.name, :class => 'category-name'),
        category.id,
        link_to(category.name, [forgeos_core, :admin, category])
      ]
    end
  }
-%>
<%= raw output.to_json -%>
