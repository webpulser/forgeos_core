- if rights.any?
  .fieldset
    %a.icon-panel= title
    .option-panel-content
      .clear
      .multi-select-div
        %a{ :href => '#' }=t :select_all
        %a{ :href => '#' }=t :unselect_all
      - rights.each do |right|
        .checkbox-container
          = label_tag "role[right_ids][]" do
            = check_box_tag "role[right_ids][]", right.id, (role ? role.rights.include?(right) : false)
            = right.name
      .clear
