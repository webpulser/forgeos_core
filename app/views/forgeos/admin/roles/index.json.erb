<%= dataTables_resultset(Forgeos::Role, @roles) do |role|
  [
    handler_icon('list-alt', role),
    content_tag(:div, link_to(role.name, [forgeos_core, :edit, :admin, role]), :class => 'role-name'),
    role.administrators.count,
    role.created_at.to_s(:short),
    activate_toogle_button(forgeos_core, role),
    duplicate_button(forgeos_core, role) +
    edit_button(forgeos_core, role) +
    destroy_button(forgeos_core, role)
  ]
end -%>
