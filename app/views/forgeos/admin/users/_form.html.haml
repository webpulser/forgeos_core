= form_for [forgeos_core, :admin, user], :html => { :id => 'wrap', :autocomplete => 'off', "data-object_name" => user.class.model_name.singular } do |f|
  .backgrounds.big-header
    = f.select :civility, t('civility.select'), { :prompt => t(:please_select) }
    = f.text_field :firstname, :title => t('firstname'), :class => 'defaultValue field_name firstname'
    = f.text_field :lastname, :title => t('lastname'), :class => 'defaultValue field_name lastname'
    .interact-links
      = forgeos_save_buttons forgeos_core.admin_users_path

  #content.grid_16.alpha.omega
    #customer-see.grid_12.alpha.omega
      // .customer-header.backgrounds
      .padding-wrap
        = render :partial => 'fieldset_account_informations', :locals => { :user => user, :f => f }
        /
          .fieldset.messages-fieldset
            %h3
              Messages
            .received-message
              %a.small-icons{ :href => '#' }
                New message!
              %span
                Received on 28/08/88
            .sent-message
              %a.small-icons
                New message!
              %span
                Sent on 28/08/88
            .send-message
              %label
                Title
              %input.all-width{ :type => 'text' }
              %label
                Body
              %textarea
              .clear
              %a.backgrounds.button{ :href => '#' }
                Send message
              = t('or').capitalize
              %a.back-link{ :href => '#' }
                Cancel

    -unless user.new_record?
      #right-sidebar.grid_4.omega.alpha
        .step
          = mail_to @user.email, 'Contact customer', :class => 'small-icons contact'
          = link_to t('user.destroy.action').capitalize, [forgeos_core, :admin, user], :confirm => t('user.destroy.confirm').capitalize, :method => :delete, :class => 'small-icons delete'
        .step.disabled
          = link_to t('newsletter', :count => 2).capitalize, '#', :class => 'small-icons step-title'
        #user_created_on.step.open
          = link_to t('user.history').capitalize, '#', :class => 'small-icons step-title'
          .inner-step
            %p
              = t('created_on').capitalize
              = @user.created_at.to_date
      .clear
