<%= dataTables_resultset(Forgeos::Administrator, @admins) do |admin|
  [
    handler_icon('user-md', admin),
    content_tag(:div, link_to(admin.full_name, [forgeos_core, :edit, :admin, admin]), :class => 'admin-name'),
    admin.role ? admin.role.name : '-',
    content_tag(:div, mail_to(admin.email, admin.email), :class => 'email' ),
    activate_toogle_button(forgeos_core, admin),
    edit_button(forgeos_core, admin) +
    destroy_button(forgeos_core, admin)
  ]
end -%>
