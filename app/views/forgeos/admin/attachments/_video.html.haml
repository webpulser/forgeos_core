.large-image.grid_7.omega
  %video#video-player{ :src => video.public_filename, :controls => true }

.large-info-container.grid_5.alpha.omega
  .large-info-block
    %span.large-info-name.truncate
      =t 'media.filename'
    %span.large-info-value
      = video.filename
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.picture.original_size'
    %span.large-info-value
      #{video.width} x #{video.height} #{t 'media.pixel', :count => 2}
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.file_type'
    %span.large-info-value
      = video.file_type.upcase
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.updated_at'
    %span.large-info-value
      = video.updated_at.to_s(:short)
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.size'
    %span.large-info-value
      #{video.size/1024} #{t 'media.byte.kilo'}
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.description'
    %span.large-info-value
      = video.description
    .clear
.clear
