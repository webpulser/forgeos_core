.large-image.grid_7.omega
  #audio-player

.large-info-container.grid_5.alpha.omega
  .large-info-block
    %span.large-info-name.truncate
      = I18n.t('media.filename').capitalize
    %span.large-info-value
      = audio.filename
    .clear
  .large-info-block
    %span.large-info-name
      = I18n.t('media.picture.original_size').capitalize
    %span.large-info-value
      = "#{audio.width} x #{audio.height} #{I18n.t('media.pixel', :count => 2)}"
    .clear
  .large-info-block
    %span.large-info-name
      = I18n.t('media.file_type').capitalize
    %span.large-info-value
      = audio.file_type.upcase
    .clear
  .large-info-block
    %span.large-info-name
      = I18n.t('media.updated_at').capitalize
    %span.large-info-value
      = audio.updated_at.to_s(:short)
    .clear
  .large-info-block
    %span.large-info-name
      = I18n.t('media.size').capitalize
    %span.large-info-value
      = "#{audio.size/1024} #{I18n.t('media.byte.kilo')}"
    .clear
  .large-info-block
    %span.large-info-name
      = I18n.t('media.description').capitalize
    %span.large-info-value
      = audio.description
    .clear

.clear

= javascript_include_tag 'audio-player'
= javascript_tag "AudioPlayer.setup('/assets/forgeos/flashes/audio-player.swf', { width: 290 }); AudioPlayer.embed('audio-player', { soundFile: '#{audio.public_filename()}', autostart: 'yes' })"
