- if largest_thumb = @thumbnails.shift
  .large-image.media-image-container.grid_7.omega
    = image_tag largest_thumb.public_filename
    %br
    %span.media-size= t(largest_thumb.thumbnail, :scope => [:media, :thumbnails]).upcase
    %br
    %span.media-size-pixels
      #{largest_thumb.width} x #{largest_thumb.height} #{t 'media.pixel', :count => 2}

.large-info-container.grid_5.alpha.omega
  .large-info-block
    %span.large-info-name.truncate
      =t 'media.filename'
    %span.large-info-value
      = picture.filename
    .clear
  .large-info-block
    %span.large-info-name=t 'media.picture.original_size'
    %a.large-info-value{ :href => picture.public_filename } #{picture.width} x #{picture.height} #{t 'media.pixel', :count => 2}
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.file_type'
    %span.large-info-value
      = picture.file_type.upcase
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.updated_at'
    %span.large-info-value
      = picture.updated_at.to_s(:short)
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.size'
    %span.large-info-value #{picture.size/1024} #{t 'media.byte.kilo'}
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.alt'
    %span.large-info-value
      = picture.alt
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.description'
    %span.large-info-value
      = picture.description
    .clear

.clear

- @thumbnails.each do |thumb|
  .grid_4.alpha.omega.media-image-container
    = image_tag thumb.public_filename
    %br
    %span.media-size= t(thumb.thumbnail, :scope => [:media, :thumbnails]).upcase
    %br
    %span.media-size-pixels #{thumb.width} x #{thumb.height} #{t 'media.pixel', :count => 2 }
