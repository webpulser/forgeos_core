.large-info-container.span6
  .large-info-block
    %span.large-info-name.truncate
      =t 'attachment.filename'
    %span.large-info-value
      = doc.filename
    .clear
  .large-info-block
    %span.large-info-name
      =t 'attachment.file_type'
    %span.large-info-value
      = doc.file_type.upcase
    .clear
  .large-info-block
    %span.large-info-name
      =t 'attachment.updated_at'
    %span.large-info-value
      = doc.updated_at.to_s(:short)
    .clear
  .large-info-block
    %span.large-info-name
      =t 'attachment.size'
    %span.large-info-value= size_in_kb(doc.size)
    .clear
  .large-info-block
    %span.large-info-name
      =t 'attachment.description'
    %span.large-info-value
      = doc.description
    .clear

.clear
