.large-info-container.grid_5.alpha.omega
  .large-info-block
    %span.large-info-name.truncate
      =t 'media.filename'
    %span.large-info-value
      = doc.filename
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.file_type'
    %span.large-info-value
      = doc.file_type.upcase
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.updated_at'
    %span.large-info-value
      = doc.updated_at.to_s(:short)
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.size'
    %span.large-info-value
      = "#{doc.size/1024} #{t('media.byte.kilo')}"
    .clear
  .large-info-block
    %span.large-info-name
      =t 'media.description'
    %span.large-info-value
      = doc.description
    .clear

