<%= dataTables_resultset(@media_class, @medias) do |media|
  table = []

  if params[:skin] == 'thumbnail'
    table << render(:partial => 'table_thumbnail.html.haml', :locals => { :media => media })
  else
    name = if params[:mode] == 'selection'
      media.filename
    else
      link_to(media.name, [forgeos_core, :edit, :admin, media], :class => "truncate", :title => media.filename)
    end

    table += [
      handler_icon(t(:bootstrap_icon, :scope => [:media, @file_type]), media),
      content_tag(:div, name, :class => 'media-name'),
      media.file_type.upcase,
      media.updated_at.to_s(:short),
      size_in_kb(media.size),
      "N/A",
      edit_button(forgeos_core, media) +
      destroy_button(forgeos_core, media, t('media.destroy.confirm'))
    ]
  end
  table += [
    media.public_filename,
    media.id,
    media.filename
  ]
end -%>
