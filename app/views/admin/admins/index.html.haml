%h1
  = I18n.t('admin', :count => 2).capitalize
%table
  %thead
    %tr
      %th
        = I18n.t('avatar').capitalize
      %th
        = I18n.t('email').capitalize
      %th
        = I18n.t('firstname').capitalize
      %th
        = I18n.t('lastname').capitalize
      %th
        = I18n.t('action', :count => 2).capitalize
  %tbody
    - @admins.each do |admin|
      %tr
        %td
          = image_tag(admin.avatar.public_filename(:small)) if admin.avatar && !admin.avatar.filename.nil?
        %td
          = h admin.email
        %td
          = h admin.lastname
        %td
          = h admin.firstname
        %td
          = link_to I18n.t('show').capitalize, admin_admin_path(admin)
          \-
          = link_to I18n.t('edit').capitalize, edit_admin_admin_path(admin)
          \-
          = link_to I18n.t('destroy').capitalize, admin_admin_path(admin), :confirm => I18n.t('admin.destroy.confirm').capitalize, :method => :delete
%br
- content_for :tools, link_to(I18n.t('admin.create.action').capitalize, new_admin_admin_path, :class => 'add')
