- form_for [:admin, menu], :html => { :id => 'wrap' } do |f|
  .backgrounds.big-header
    = f.text_field :name
    .interact-links
      = submit_tag I18n.t('save_changes').capitalize, :class => 'backgrounds interact-button'
      = I18n.t('or')
      = link_to I18n.t('cancel').capitalize, admin_menus_path, :class => 'back-link'

  #content.grid_12.alpha.omega
    .inner-content
      TODO

  #right-sidebar.grid_4.alpha.omega
    .step
      - unless menu.new_record?
        = link_to I18n.t('menu.duplicate').capitalize, duplicate_admin_menu_path(menu), :class => 'small-icons duplicate'
        = link_to I18n.t('menu.destroy.action').capitalize, [:admin, menu], :confirm => I18n.t('menu.destroy.confirm').capitalize, :method => :delete, :class => 'small-icons delete'
      .clear
  .clear
