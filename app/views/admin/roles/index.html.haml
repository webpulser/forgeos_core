= render :partial => 'tabs'
#sidebar.grid_4.omega.alpha
  .backgrounds.header
    %span.backgrounds.action-button
      %span.big-icons.new-category
      %span.small-icons.arrow
  .backgrounds.sidebar-background
  .sidebar-content
    %h2.small-icons.all-roles
      = I18n.t('role.all').capitalize
    #role-tree
      %ul
        = render :partial => 'admin/categories/list', :locals => { :categories => RoleCategory.find_all_by_parent_id(nil) }
#content.grid_12.alpha.omega
  .backgrounds.header
    = link_to content_tag(:span,I18n.t('role.create.action').capitalize, :class=>'big-icons create-role'), new_admin_role_path, :class=>'backgrounds action-button'
    #search.right
      = link_to content_tag(:span, I18n.t('search').capitalize, :class => 'small-icons search-span'), '#', :class => 'small-icons left search-link'
    .backgrounds.search-form
  .content-background
  %table#table.datatable
    %thead
      %tr
        %th
        %th
          = I18n.t('name').capitalize
        %th
          = I18n.t('admin.other').capitalize
        %th
          = I18n.t('created_on').capitalize
        %th
          = I18n.t('active').capitalize
          ?
        %th.actions-td
    %tbody

= dataTables_tag 6, :url => admin_roles_path(:format => :json)
