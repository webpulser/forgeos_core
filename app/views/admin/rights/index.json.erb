<%
  output = {
    :iTotalDisplayRecords => @rights.total_entries || 0,
    :aaData => @rights.collect do |right|
      link_id = "right_#{right.id}"
      [
        content_tag(:div,
          tag(:div, :class => 'handler') +
          content_tag(:div, '&nbsp;', :id => link_id, :class => 'small-icons right-ico'),
          :class => 'handler_container'),
        content_tag(:div, right.name, :class => 'right-name'),
        right.controller_name,
        right.action_name,
        content_tag(:span, '&nbsp;', :class => 'small-icons duplicate-link duplicate-right') +
        content_tag(:span, '&nbsp;', :class => 'small-icons edit-link edit-right') +
        link_to('', :url => [forgeos_core, :admin, right],
          :remote => true,
          :method => :delete,
          :confirm => I18n.t('right.destroy.confirm').capitalize,
          :success => "removedataTablesRow('#destroy_#{link_id}')",
          :html => {
          :class => 'small-icons destroy-link', :id => "destroy_#{link_id}"
        })
      ]
    end
 }
-%>
<%= raw output.to_json %>
