= render :partial => 'tabs'
#sidebar.grid_4.omega.alpha
  .backgrounds.header
    %span.backgrounds.action-button
      %span.big-icons.new-category
      %span.small-icons.arrow
  .backgrounds.sidebar-background
  .sidebar-content
    %h2.small-icons.all-rights
      = I18n.t('right.all').capitalize
    #right-tree
      %ul
        = render :partial => 'admin/categories/list', :locals => { :categories => RightCategory.find_all_by_parent_id(nil) }
#content.grid_12.alpha.omega
  .backgrounds.header
    = link_to I18n.t('right.create.action').capitalize, new_admin_right_path
    #search.right
      = link_to content_tag(:span, I18n.t('search').capitalize, :class => 'small-icons search-span'), '#', :class => 'small-icons left search-link'
    .backgrounds.search-form
  .content-background
  %table#table.datatable
    %thead
      %tr
        %th
        %th
          = I18n.t('name').capitalize
        %th
          = I18n.t('category.one').capitalize
        %th
          = I18n.t('controller_name').capitalize
        %th
          = I18n.t('action_name').capitalize
        %th.actions-td
    %tbody

= dataTables_tag 6, :url => admin_rights_path(:format => :json)
