!!! xml utf-8
!!! 1.1
%html{ "xml:lang" => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %link{ :href => "/images/admin/favicon.gif", :rel => "shortcut icon", :type => "image/gif" }
    = stylesheet_link_tag %w(960 jquery-ui/themes/forgeos jquery.selectbox jstree/tree_component admin/base), :cache => 'admin'
    = javascript_include_tag 'jquery'
    %title= "#{I18n.t(:forgeos)} - #{I18n.t(@controller.controller_name, :scope => ['back_office', 'menu']).capitalize}"
  %body
    #container.container_16
      .grid_16
        %ul#submenu.backgrounds
          - build_menu(Forgeos::AdminSubMenu, :menu => :submenu)
          = yield :submenu
        %ul#menu.backgrounds
          - build_menu(Forgeos::AdminMenu)
          = yield :menu
        .backgrounds.menu-bottom
        #notifications.grid_16
      .clear
      #page.grid_16.ui-tabs.ui-widget.ui-widget-content.ui-corner-all
        = yield
      #footer
      #dialog
      = javascript_include_tag %w(admin/customselects admin/jquery-cookie-plugin), :cache => 'admin/no-concat-lib'
      = javascript_include_tag %w(tiny_mce/jquery.tinymce jquery-ui jrails jquery.dataTables.min jquery.dataSlides jstree/jquery.tree jstree/plugins/jquery.tree.contextmenu jstree/plugins/jquery.tree.checkbox), :cache => 'admin/lib'
      = javascript_include_dir_tag('admin/functions/', :cache => 'admin/functions')
      = javascript_include_dir_tag('admin/inits/', :cache => 'admin/inits')
      :javascript
        window._forgeos_js_vars = {
         "session_key": '#{ActionController::Base.session_options[:key]}',
         "session": encodeURIComponent('#{cookies[ActionController::Base.session_options[:key]]}'),
         "locale": '#{I18n.locale}',
         "token": encodeURIComponent('#{form_authenticity_token.inspect}')
        }
        jQuery(document).ready(function(){
          InitCustomSelects();
          display_notifications();
        });
