!!! xml utf-8
!!! 1.1
%html{ "xml:lang" => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    %link{ :href => "/favicon.gif", :rel => "shortcut icon", :type => "image/gif" }
    = stylesheet_link_tag %w(960 jquery-ui/themes/forgeos jquery.selectbox jstree/tree_component admin/base )
    = javascript_include_tag 'jquery'
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    %title
      = I18n.t('forgeos')
  %body
    #container.container_16
      .grid_16
        %ul#submenu.backgrounds
          - build_menu(Forgeos::AdminSubMenu, :menu => :submenu)
          = yield :submenu
        %ul#menu.backgrounds
          - build_menu(Forgeos::AdminMenu)
          = yield :menu
        .backgrounds.menu-bottom
      .clear
      #notifications
      #page.grid_16.ui-tabs.ui-widget.ui-widget-content.ui-corner-all
        = yield
      #footer
      #dialog
      = javascript_include_tag 'admin/customselects'
      = javascript_include_tag %w(tiny_mce/jquery.tinymce jquery-ui jrails jquery.dataTables.min jquery.dataSlides jstree/css jstree/tree_component.min), :cache => 'admin/base'
      = javascript_include_dir_tag('admin/inits/')
      = javascript_include_dir_tag('admin/functions/')
