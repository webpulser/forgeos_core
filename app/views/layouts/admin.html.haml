!!! xml utf-8
!!! 1.1
%html{ "xml:lang" => I18n.locale, :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type" }
    = stylesheet_link_tag %w(960 jquery-ui/themes/forgeos jquery.selectbox jstree/tree_component admin/base )
    = javascript_include_tag 'jquery'
    = javascript_tag "var AUTH_TOKEN = #{form_authenticity_token.inspect};" if protect_against_forgery?
    %title
      Document sans nom
  %body
    #container.container_16
      .grid_16
        %ul#submenu.backgrounds
          %li.left.first
            = link_to I18n.t('administration').capitalize, admin_admins_path
          %li.left
            %a{ :href => "#" }
              Preferences
          %li.left
            = link_to I18n.t('library').capitalize, admin_attachments_path(:file_type => 'picture')
          %li.left
            = link_to I18n.t('your_account').capitalize, admin_account_path(current_user)
          %li.right
            = link_to I18n.t('logout').capitalize, admin_logout_path
          %li.right
            %a{ :href => "#" }
              Support
          %li.right.first
            = link_to I18n.t('see_site').capitalize, :root
        %ul#menu.backgrounds
          - build_menu(Forgeos::AdminMenu)
          = yield :menu
        .backgrounds.menu-bottom
      .clear
      #notifications
      #page.grid_16.ui-tabs.ui-widget.ui-widget-content.ui-corner-all
        = yield
      #footer
      #dialog
      = javascript_include_tag %w(jquery-ui jrails jstree/css jstree/tree_component.min admin/customselects jquery.dataTables.min admin/base  jquery.dataSlides)
