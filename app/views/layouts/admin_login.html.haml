!!! xml utf-8
!!! 1.1
%html{ 'xml:lang' => I18n.locale, :xmlns => 'http://www.w3.org/1999/xhtml' }
  %head
    %meta{ :content => 'text/html; charset=utf-8', 'http-equiv' => 'Content-Type' }
    %link{ :href => '/images/admin/favicon.gif', :rel => 'shortcut icon', :type => 'image/gif' }
    = stylesheet_link_tag %w(960 admin/login)
    = javascript_include_tag 'jquery'
    %title= I18n.t(:login, :scope => ['back_office', 'menu'])
  %body
    = yield
    = javascript_include_tag %w(admin/functions/forgeos_core/notifications admin/inits/forgeos_core/clicks), :cache => 'admin/login'
    :javascript
      window._forgeos_js_vars = {
       "locale": '#{I18n.locale}',
      }
      jQuery(document).ready(function(){
        InitCustomSelects();
        display_notifications();
      });
